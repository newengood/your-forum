{{!-- insert dashboard html here --}}
<div class="container">
    <div class="row">
        <div class="col">
            <h2>Notifications</h2>
            {{#each invitations as |invitation| }}
            <div class="card" style="width: 18rem;">
                <a class="btn btn-primary btn-sm btn-block invitaiton" data-id="{{invitation.id}}" href="/dashboard" role="button">Accept Invite</a>
            </div>
            {{/each}}
        </div>
        <div class="col-6">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Your Posts</h1>
                    {{#each posts as |post| }}
                    <div class="card">
                        <div class="card-header">
                            <h2> <a href="/post/{{post.id}}">{{post.title}}</a></h2>
                        </div>

                        <div class="card-body">

                            <p class="card-text">{{post.content}}</p>

                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
        </div>
        <div class="col">
          
            <h2>Your Groups</h2>
            {{#each mermberships as |group| }}
            <div class="row mb4">
                <div class="col-md-5">
                    <button type="button" class="btn btn-primary btn-lg btn-block"><a class="text-white"
                            href="/groups/{{group.id}}">{{group.name}}</a></button>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>

<script src="./js/dashboard.js"></script>